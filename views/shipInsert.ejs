<!-- 제목, 저자, 출판사, 재고량, 금액, 상세내용 -->

<body class="text-center" style="margin-top: 100px; margin-left: 350px; margin-right: 350px;">
    <script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
    <h3>배송지 추가하기</h3>
    <br>
    <br>

    <div class="input-group mb-3">
        <span class="input-group-text">우편번호</span>
        <input type="text" class="form-control" placeholder="우편번호" aria-label="code" id="delivery_code">
        <span class="input-group-text">주소</span>
        <input type="text" class="form-control" placeholder="주소 (도로명주소 or 지번주소)" aria-label="adress"
            id="delivery_adress">
        <button class="btn btn-primary" type="button" id="inputGroupFileAddon04" readonly
            onclick="findAddr()">우편번호 찾기</button>
    </div>
    <br>
    <div class="input-group mb-3">
        <span class="input-group-text">상세주소</span>
        <input type="text" class="form-control" placeholder="상세주소" aria-label="Username"
            aria-describedby="basic-addon1">
    </div>
    <button  style="right:auto;" class="btn btn-primary" type="submit">저장</button>

    <script>
        function findAddr() {
            new daum.Postcode({
                oncomplete: function (data) {

                    console.log(data);

                    // 팝업에서 검색결과 항목을 클릭했을때 실행할 코드를 작성하는 부분.
                    // 도로명 주소의 노출 규칙에 따라 주소를 표시한다.
                    // 내려오는 변수가 값이 없는 경우엔 공백('')값을 가지므로, 이를 참고하여 분기 한다.
                    var roadAddr = data.roadAddress; // 도로명 주소 변수
                    var jibunAddr = data.jibunAddress; // 지번 주소 변수
                    // 우편번호와 주소 정보를 해당 필드에 넣는다.
                    document.getElementById('delivery_code').value = data.zonecode;
                    if (roadAddr !== '') {
                        document.getElementById("delivery_adress").value = roadAddr;
                    }
                    else if (jibunAddr !== '') {
                        document.getElementById("delivery_adress").value = jibunAddr;
                    }
                }
            }).open();
        }
    </script>





