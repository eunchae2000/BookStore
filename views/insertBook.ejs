<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

  <title>insert Book</title>
</head>

<body class="text-center" style="margin-top: 50px; margin-right: 80px; margin-left: 80px; margin-bottom: 20px;">
  <form action="/book/insert" method="POST">
    <div class="input-group input-group-lg">
      <span class="input-group-text" id="inputGroup-sizing-lg">제목</span>
      <input type="text" class="form-control" aria-label="Sizing example input" name="book_name"
        aria-describedby="inputGroup-sizing-lg" required>
    </div>
    <br>
    <div class="row">
      <div class="col">
        <input type="text" class="form-control" placeholder="저자" name="book_writer" required>
      </div>
      <div class="col">
        <input type="text" class="form-control" placeholder="출판사" name="book_publishing" required>
      </div>
      <div class="col">
        <input type="text" class="form-control" placeholder="재고량" name="book_num" required>
      </div>
      <div class="col">
        <input type="text" class="form-control" placeholder="금액" name="book_amount" required>
      </div>
    </div>
    <br>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label" aria-placeholder="상세내용"></label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="book_detail" placeholder="상세내용"
        required></textarea>
    </div>
    <br>
    <button type="submit" class="btn btn-dark">저장</button>
  </form>


  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
    crossorigin="anonymous"></script>

  <!-- Option 2: Separate Popper and Bootstrap JS -->
